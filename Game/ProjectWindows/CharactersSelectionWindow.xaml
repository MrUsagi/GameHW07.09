<Window x:Class="Game.ProjectWindows.CharactersSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game.ProjectWindows"
        mc:Ignorable="d"
        Title="CharactersSelectionWindow" Height="900" Width="900" Loaded="Window_Loaded">
    <Grid>
        <Label Margin="370,0,136,834" FontSize="20" FontFamily="Goudy Stout" Foreground="#FFF122AF">Select character</Label>
        <Button Margin="0,0,606,825" Background="#FF818181" Click="GoBack_Click">←Back</Button>
        <Button Click="AddCharacterBtn_Click" Margin="832,0,19,831" RenderTransformOrigin="0.5,0.5">
            <StackPanel >
                <Image Source="http://images.gofreedownload.net/plus-sign-clip-art-6217.jpg" />
            </StackPanel>
        </Button>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,46,0,0">
            <WrapPanel Width="900" Height="900" Name="mainPanel">
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</Window>
